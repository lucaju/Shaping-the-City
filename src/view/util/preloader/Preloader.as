package view.util.preloader {		//import	import flash.display.Loader;	import flash.display.Sprite;	import flash.net.URLRequest;		/**	 * 	 * @author lucaju	 * 	 */	public class Preloader extends Sprite {				//****************** Properties ****************** ****************** ****************** 				protected var target					:Sprite;		protected var animation					:Loader;		protected var _scale					:Number = .5;		protected var localX:Number;		protected var localY:Number;					//****************** Properties ****************** ****************** ****************** 				/**		 * 		 * @param _target		 * 		 */		public function Preloader(_target:Sprite = null):void {			target = _target;		}						//****************** GETTTERS ****************** ****************** ****************** 				/**		 * 		 * @return 		 * 		 */		public function get scale():Number {			return _scale;		}						//****************** SETTTERS ****************** ****************** ****************** 				/**		 * 		 * @param value		 * 		 */		public function set scale(value:Number):void {			_scale = value		}				/**		 * 		 * @param _x		 * @param _y		 * 		 */		public function postition(_x:Number, _y:Number):void {			localX = _x;			localY = _y;		}						//****************** PUBLIC METHODS ****************** ****************** ****************** 				/**		 * 		 * 		 */		public function start():void {						//Add to target			if (target) {				target.addChild(this);			} else {				parent.addChild(this);			}						//positioning			if (localX && localY) {				this.x = localX;				this.y = localY;			} else if (target) {				this.x = target.width/2;				this.y = target.height/2;			} else {				this.x = parent.width/2;				this.y = parent.height/2;			}						//load animation			var urlRequest:URLRequest = new URLRequest("view/util/preloader/preloader.swf")			animation = new Loader();			animation.load(urlRequest);			this.addChild(animation);						//scale and fx			animation.scaleX = animation.scaleY = scale;			animation.blendMode = "invert";		}				/**		 * 		 * 		 */		public function stop():void {			this.removeChild(animation);		}					}}